            function vericarAbg(val) {
                $.ajax({
                    type: "GET",
                    url: Routing.generate('verificar_notarios'),
                    data: {abg: val},
                    success: function (data)
                    {
                        $("#divVerificar").empty();
                        $("#divVerificar").append(data);
                        $("#divVerificar").show();
                        $("#divLista").hide();
                    },
                    error: function (errors)
                    {
                    }
