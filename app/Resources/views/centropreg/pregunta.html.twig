                                <!-- INICIO DE RESPUESTA -->
                                {% for key, respuesta in respuestas %}
                                <div style="padding: 15px; background-color: #f6f6f6;">
                                    <div style="background-color: #fff; padding: 15px;">
                                        
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <p class="sans" style="font-size: 13px;">
                                                        <strong>RESPUESTA POR {%if(respuesta.estado !=0)%}<a href="{{path('busquedaPerfil', {url:respuesta.url})}}"> {{respuesta.nombres}}</a>{%else%} {{respuesta.nombres}}{%endif%} </strong>
                                                    </p>
                                                    <p class="sans text-justify" style="font-size: 13px;">
                                                         {{respuesta.respuesta}} 
                                                    </p>
                                                    <p class="sans" style="color: #999999; font-size: 13px;">Respuesta por {%if(respuesta.estado !=0)%}<a href="{{path('busquedaPerfil', {url:respuesta.url})}}"> {{respuesta.nombres}}</a>{%else%} {{respuesta.nombres}}{%endif%} en la categoria <a href="{{ path('directorio_index') }}?busqueda={{respuesta.especialidad}}">{{respuesta.especialidad}}</a> {{ tiemposRespuesta[key] }}</p>
                                                </div>

                                                <div class="col-md-2">
                                                   <img src="{{asset('') }}{{ fotos[key].src }}" style="width: 100%;">
                                                    <div style="background-color: #263345; height: 30px; line-height: 30px; margin-top: 5px;">
                                             
                                                        <p class="text-center sans text-uppercase" style="color: #fff; font-size: 13px; font-weight: 600;"> {%if(respuesta.estado !=0)%}<a class="sans" href="{{path('busquedaPerfil', {url:respuesta.url})}}" style=" text-transform: none; color: inherit;">Ver perfil</a> {%else%}Ver perfi{%endif%}</p>
                                                    </div>
                                                    <div style="background-color: #263345; height: 30px; line-height: 30px; margin-top: 5px;">
                                                        <p class="text-center sans text-uppercase" style="color: #fff; font-size: 13px; font-weight: 600;"><a class="sans" href="{{path('contacto', {correo:respuesta.correo})}}" style=" text-transform: none; color: inherit;">Contactar</a></p>
                                                    </div>
                                                </div>
                                            </div>
                                       
                                    </div>
                                </div> <!-- FIN DE RESPUESTA -->
                           {% endfor %}
                         
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-md-3">
                <img src="{{asset('Resources/src/img/publicida/banner.png')}}" class="img-thumbnail" style="width: 100%; max-width: 100%;">
