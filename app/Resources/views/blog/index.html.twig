    {% block cuerpo %}
        <div class="row">
            <h1>Crear entrada de blog</h1>

            <div class="col-md-10">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title text-success">Cuenta de prueba de un periodo de 30 dias.</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <form role="form" id="fdatos">

                            <div class="form-group">
                                <label for="nombreEmpleado">Titulo de la entrada</label>
                                <input type="text" value="" class="form-control" id="txttitulo" name="titulo"
                                       placeholder="Nombre del empleado">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Contenido de la entrada</label>
                                <textarea name="entrada" class="form-control" rows="3" placeholder="Ingrese el contenido de la entrada..." ></textarea>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" id="txtEmail" name="email" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="nombreEmpleado">Categoria de la entrada</label>
                                <select class="form-control" name="idCategoria" id="idCategoria" required="">
                                    <option value="" disabled selected style="margin-bottom: 10px;">Seleccione cliente</option>                           
                                    <option value="" style="margin-bottom: 10px;">Cliente1</option>                           
                                    <option value="" style="margin-bottom: 10px;">Cliente2</option>                           
                                </select>
                            </div>

                            <div class="form-group">
                                <img id="img_destino" src="http://placehold.it/900x300" style="max-width: 100%; width: 100%; margin-top: 30px;">
                                <input id="userfile" type="file" name="img">
                            </div>

                        </form>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">

                        <!-- Boton Ingreso -->

                        <a class="btn btn-primary btn-sm insertar" id="enfiarf">Abrir cuenta</a>


                    </div>

                </div>
                <!-- /input-group -->
            </div>
        </div> 
