    {% block cuerpo %}
        <div class="row" style=" margin-left:15px; margin-right:15px; ">
            <div class="box box-widget">
                <div class="box-body">
                    <div class="page-header">
                        <h2>Espacios publicitarios</h2>
                    </div>
                    
                    <div class="nav-tabs-custom" style="cursor: move;">
