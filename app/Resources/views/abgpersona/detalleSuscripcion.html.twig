<div class="row" style=" margin-left:15px; margin-right:15px; height:85%;">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">SUSCRIPCIONES</h3>
        </div>
        <div class="box-body">
            <div class="form-group table-responsive mailbox-messages">
                <div class="row" style="margin-top: 15px;">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-hover table-striped table-bordered"  style="font-size:13px;" >
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc  text-center" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width:2%;">No.</th>
                                    <th class="sorting text-center" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width:11%;">Fecha</th>
                                    <th class="sorting text-center" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"  style="width:14%;">Tipo de servicio</th>
                                    <th class="sorting text-center" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"  style="width:16%;">Cantidad de días</th>
                                    <th class="sorting text-center" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"  style="width:10%;">Costo ($)</th>
                                    <th class="sorting text-center" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"  style="width:47%;">Descripción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {%if suscripcion|default is not empty %}
                                    {% for key, datos in suscripcion %}
                                        <tr>
                                            <td align="center">{{ key + 1 }}</td>
                                            <td align="center">{{datos.fechaPago}}</td>
                                            <td align="left"> {{datos.servicio}}</td>
                                            <td align="center"> {{datos.plazo}}</td>
                                            <td class="text-right">$ {{ datos.monto|number_format(2, '.', ',') }}</td>
                                            <td align="justify">{{datos.descripcion}}&nbsp;</td>
                                        </tr>
                                    {%endfor%}
                                {%endif%}
                            </tbody>
                        </table>
                            <br>
                    </div>
                </div>
            </div>
        </div>

