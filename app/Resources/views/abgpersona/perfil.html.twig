                           }
                            },
                            error: function (xhr, status)
                            {
                                 Lobibox.notify("danger", {
                                                        size: 'mini',
                                                        msg: 'Lo sentimos, ocurrio un error'
                                                    });
                                    $("#gif").hide();
                                    $(".close").click();
                                    $('#idModalFotoP').modal('toggle');
                                
                            }
                        });
                        
                    // Print HTTP request params
                    var formValue = $(this).serialize();
                    $('#result-data').text(formValue);
