                        <form id="frmVerificacion" role="form" enctype="multipart/form-data">
                            <div class="form-group">
                                <img src="" style="max-height: 100%;max-width: 100%;" id="prevVerificacion" >
                                <input type="file" name="imagen" class="" id="imagenV">
                            </div>
                        </form>
                        <div class="form-group">
                            <button class="btn btn-primary" style="margin-top: 30px;" id="enviarImagenV">Guardar</button>
                            <button class="btn btn-danger" style="margin-top: 30px;" id="cancelarImagenV">Cancelar</button>
                        </div>
                    </div>
                    <div class="col-md-1" style="margin-top: 12px;"></div>	
                </div>
            </div>
        </div>
</div>




