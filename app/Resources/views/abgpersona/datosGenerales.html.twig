{% block cuerpo %}
    {% for datos in abgPersona %} 
        <header class="main-header">
        {% embed ':Layout:encabezado.html.twig' %}{% endembed %}
    </header>
    <aside class="main-sidebar" >
        <!--  Barra lateral -->
    </aside>
    <div class="content-wrapper" style=" margin-left:0px; margin-right:0px; padding: 15px;">
        <section class="content-header">
        </section>
        <section >
            <div class="row" >
                <!-- LADO IZQUIERDO -->
                <div class="col-md-6 col-sm-9 col-xs-12" style="">
                    <row>
                    <form role="form" id="fgeneral" >
                        <div class="form-group" >
                        <h1 style="text-decoration:none;color: inherit;">Bienvenido al directorio de abogados mas grande de El Salvador</h1>
                  
                        <h2>Estas a un paso de .... Complete su información personal</h2>
</div>
                        <div class="form-group" >
                            <label for="nombreEmpleado">Nombre </label>
                            <div  class="form-group " id="nombre">
                                <input type="text" class="form-control  input-sm"  id="txtnombre" name="txtnombre" 
                                       placeholder="Nombres" data-rule-required="true" value="{{abgPersona[0].nombre}}"> 
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ejemplo_password_1">Apellidos</label>
                            <input type="text" class="form-control  input-sm"  id="txtapellido" name="txtapellido" 
                                   placeholder="Apellidos" data-rule-required="true" value="{{abgPersona[0].apellido}}">
                        </div>

                        <div class="form-group ">
                          
                            
                            <div class="row">
                                
                                <div class="col-sm-6 col-xs-6">
                                      <label for="Fecha_inicio">Departamento</label>
                                    <select id="Sdepartamento" style="width:100%;" name="Sdepartamento" class=" input-sm" data-rule-required="true" data-rule-select="true" onChange="ciudad()">
                                        <option value="">- Seleccione -</option>
                                        {% for datos in depto %}
                                            <option value="{{datos.id}}" >{{datos.nombre}}</option>
                                        {%endfor%}

                                    </select> 
                                </div>
                                <div  id="divMuni">
                                    <div class="col-sm-6 col-xs-6" id="divMuni">
                                          <label for="Fecha_inicio">Municipio</label>
                                        <select id="Smunicipio" name="Smunicipio" class="form-control input-sm" data-rule-required="true" data-rule-select="true">

                                        </select> 
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ejemplo_password_1">Titulo profesional</label>
                            <select style="width: 100%;" id="Stitulo" name="Stitulo" class="input-sm newIdioma" data-rule-required="true">
                                <option value="">- Seleccione -</option>
                                <option value="Doctor/a" >Doctor/a</option>
                                <option value="Licenciado/a" >Licenciado/a</option>
                                <option value="Magíster" >Magíster</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="ejemplo_password_1">Especialidad</label>
                            <select style="width: 100%;" id="Sespecialidad" name="Sespecialidad" class=" input-sm newIdioma js-example-responsive"  multiple="multiple" data-rule-required="true">  
                                {% for datos in especialida %}
                                    <option value="{{datos.id}}" >{{datos.nombre}}</option>
                                {%endfor%}
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-sm btn-flat" onClick="enviar()">Continuar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
 </div>
        </section>
    </div>


    <script src="{{ asset('Resources/select2/dist/js/select2.min.js') }}"></script>
    <script type="text/javascript">
                                        $(document).ready(function () {
                                            $('#Sespecialidad').select2({
                                                placeholder: 'Seleccione un maximo de tres especialidades',
                                                maximumSelectionLength: 3}
                                            );
                                            $('#Sdepartamento').select2();
                                            $('#Stitulo').select2();
                                             $('#Smunicipio').select2();

                                        });
                                        function ciudad()
                                        {
                                            $.ajax({
                                                type: "GET",
                                                url: Routing.generate('ciudad'),
                                                async: false,
                                                dataType: 'json',
                                                data: {estado: $('#Sdepartamento').val()},
                                                success: function (data)
                                                {

                                                    $("#divMuni").empty();
                                                    estado = '<div class="col-sm-6 col-xs-6"  > ';
                                                    estado +='<label>Municipio</label>';
                                                        estado += '<select  style="width:100%;" class="form-control input-sm Smunicipio"  name="Smunicipio" id="Smunicipio" >';
                                                    estado += '<option value="">- Seleccione -</option>';
                                                    $.each(data.ciudad, function (indice, val) {
                                                        estado += '<option value="' + val.id + '">' + val.nombre + '</option>';
                                                    });
                                                    estado += '</select></div>';
                                                  
                                                    $("#divMuni").append(estado);
                                                      $('.Smunicipio').select2();
                                                },
                                                error: function (errors)
                                                {

                                                }
                                            });
                                        }

                                        function enviar()
                                        {

                                            if ($('#Sespecialidad').val() !== null && $("#txtnombre").val() !== "" && $("#txtapellido").val() !== "" && ($("#Smunicipio").val() !== ""))
                                            {
                                                $("#fgeneral").submit(
                                                        function (event) {
                                                            $.ajax({
                                                                type: "POST",
                                                                async: false,
                                                                dataType: 'json',
                                                                url: Routing.generate('informacion_general'),
                                                                data: {datos: $("#fgeneral").serialize(), esp: $('#Sespecialidad').val()},
                                                                success: function (data)
                                                                {
                                                            
                                                                    if (data.msj !=="") {
                                                                          Lobibox.notify("success", {
                                                                            size: 'mini',
                                                                            msg: "<p>" + data.msj + "</p>"
                                                                        });
                                                                         var url = Routing.generate('perfil');
                                                                          window.open(url, "_self");
                                                                    }
                                                                    else if(data.error!==""){
                                                                        Lobibox.notify("warning", {
                                                                            size: 'mini',
                                                                            msg: "<p>" + data.error + "</p>"
                                                                        }); 
                                                                    }
                                                                },
                                                                error: function (errors)
                                                                {

                                                                }
                                                            });
                                                            event.preventDefault();
                                                        });

                                            }
                                        }
    </script>
{% endfor %}
{% endblock %}






