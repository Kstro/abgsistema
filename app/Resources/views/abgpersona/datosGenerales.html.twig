                                                            {
                                                            $("#fgeneral").submit(
                                                                    function (event) {

                                                                    $.ajax({
                                                                    type: "POST",
                                                                            async: false,
                                                                            dataType: 'json',
                                                                            url: Routing.generate('informacion_general'),
                                                                            data: {datos: $("#fgeneral").serialize(), esp: DataEspecialida, genero: $('input:radio[name=rGenero]:checked').val(), codigo: $('input#hcodigo').val()},
