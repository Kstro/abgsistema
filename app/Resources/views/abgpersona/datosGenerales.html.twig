                                    <div class="col-md-6 col-xs-6 no-margin no-padding">

                                        <div class="row">
                                            <div class="col-xs-12" >
                                                <strong><p class="sans" >
                                                        <input type="checkbox" class="{{datos.id}} Especialida" name="{{datos.id}}" id="{{datos.id}}" value="{{datos.id}}" onclick="especialidadS({{datos.id}})"/>&nbsp;{{datos.nombre| upper }}</p></strong>  

